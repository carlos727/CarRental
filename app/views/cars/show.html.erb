<div>
  <strong>Car Picture:</strong></br>
  <%= image_tag @car.avatar.url(:medium) %>
</div>

<p>
  <strong>Plate:</strong>
  <%= @car.plate %>
</p>

<p>
  <strong>Mileage:</strong>
  <%= @car.mileage %> <% if @car.mileage != nil %> km <% end %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @car.capacity %> <% if @car.capacity > 1 %> people <% else %> person <% end %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @car.brand %>
</p>

<p>
  <strong>Year:</strong>
  <%= @car.year %>
</p>

<p>
  <strong>Color:</strong>
  <%= @car.color %>
</p>

<p>
  <strong>Motor:</strong>
  <%= @car.motor %>
</p>

<p>
  <strong>Description:</strong>
  <%= @car.description %>
</p>

<p>
  <strong>Gasoline:</strong>
  <%= @car.gasoline %> <% if @car.gasoline != nil %> lt <% end %>
</p>

<p>
  <strong>Transmision:</strong>
  <% if @car.transmision == true %> Yes <% else %> No <% end %>
</p>

<p>
  <strong>Trunk:</strong>
  <% if @car.trunk == true %> Yes <% else %> No <% end %>
</p>

<p>
  <strong>Doors:</strong>
  <%= @car.door %>
</p>

<%= link_to 'Edit', edit_car_path(@car), class: 'button' %>
